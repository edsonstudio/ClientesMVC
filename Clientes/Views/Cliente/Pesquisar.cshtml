@model Clientes.Models.Cliente

@{
    ViewBag.Title = "Pesquisar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <section id="pesquisar">
        <div class="container">

            <div id="accordion">
                <div class="card">

                    <div id="collapse1" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <form class="form-row" action="/Cliente/Pesquisar">
                                <!--Inicio da div pesquisar-->
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-outline-secondary">Pesquisar por:</button>
                                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse1" aria-expanded="true" aria-controls="collapseOne">ID</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse2" aria-expanded="false" aria-controls="collapseTwo">Nome</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse3" aria-expanded="false" aria-controls="collapseThree">CPF</a>
                                        </div>
                                    </div>
                                    <input type="text" name="id" id="id" maxlength="11" class="form-control" aria-describedby="inputGroup-sizing-default" aria-describedby="basic-addon1" placeholder="Digite o ID do cliente" required="required" /><br />
                                    <div class="input-group-append">
                                        <input type="submit" value="Pesquisar" class="btn btn-primary" />
                                    </div>
                                </div>
                                <!--Fim da div pesquisar-->
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card">

                    <div id="collapse2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                        <div class="card-body">

                            <form class="form-row" action="/Cliente/PesquisarNm">
                                <!--Inicio da div pesquisar-->
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-outline-secondary">Pesquisar por:</button>
                                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse1" aria-expanded="true" aria-controls="collapseOne">ID</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse2" aria-expanded="false" aria-controls="collapseTwo">Nome</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse3" aria-expanded="false" aria-controls="collapseThree">CPF</a>
                                        </div>
                                    </div>
                                    <input type="text" name="nome" id="nome" maxlength="200" class="form-control" aria-describedby="inputGroup-sizing-default" aria-describedby="basic-addon1" placeholder="Digite o nome do cliente" required="required" /><br />
                                    <div class="input-group-append">
                                        <input type="submit" value="Pesquisar" class="btn btn-primary" />
                                    </div>
                                </div>
                                <!--Fim da div pesquisar-->
                            </form>

                        </div>
                    </div>
                </div>
                <div class="card">

                    <div id="collapse3" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                        <div class="card-body">
                            <form class="form-row" action="/Cliente/PesquisarCpf">
                                <!--Inicio da div pesquisar-->
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <button type="button" class="btn btn-outline-secondary">Pesquisar por:</button>
                                        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse1" aria-expanded="true" aria-controls="collapseOne">ID</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse2" aria-expanded="false" aria-controls="collapseTwo">Nome</a>
                                            <div role="separator" class="dropdown-divider"></div>
                                            <a class="dropdown-item" data-toggle="collapse" href="#collapse3" aria-expanded="false" aria-controls="collapseThree">CPF</a>
                                        </div>
                                    </div>
                                    <input type="text" name="cpf" id="cpf" class="form-control" placeholder="Digite o CPF do cliente" aria-describedby="inputGroup-sizing-default" aria-describedby="basic-addon1" data-mask="000.000.000-00" pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}" maxlength="14" required="required" /><br />
                                    <div class="input-group-append">
                                        <input type="submit" value="Pesquisar" class="btn btn-primary" />
                                    </div>
                                </div>
                                <!--Fim da div pesquisar-->
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <h3 class="title">Pesquisa de clientes</h3>
            </div>

            <div class="card bg-light mb-3" style="max-width: 90rem;">
                <div class="card-header text-justify">
                    <h4>Resultado da pesquisa</h4>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Cliente</h3>
                    <h5 class="card-title">ID:&nbsp;<span>@ViewBag.Cliente.Id</span></h5>
                    <h5 class="card-title">Nome:&nbsp;<span>@ViewBag.Cliente.Nome</span></h5>
                    <h5 class="card-title">CPF:&nbsp;<span>@ViewBag.Cliente.Cpf</span></h5>
                    <p class="card-text">Cliente retornado do banco de dados.</p>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Editar", new { id = @ViewBag.Cliente.Id, nome = @ViewBag.Cliente.Nome, cpf = @ViewBag.Cliente.Cpf })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", new { id = @ViewBag.Cliente.Id })" class="btn btn-danger">Excluir</a>
                </div>
            </div>

            <div class="card-header" id="headingOne">
                <h5 class="mb-0 text-center">
                    <button class="btn btn-dark btn-lg btn-block" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        EXIBIR TODOS OS CLIENTES
                    </button>
                </h5>
            </div>

            <div id="accordion2">
                <div class="card">

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion2">
                        <div class="card-body">
                            <div class="table-responsive">
                                <h4>Lista ordenada por ID</h4><br />
                                <table class="table table-striped table-hover" id="tblClientes">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-sort-amount-down-alt"></i>&nbsp;ID</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo"><i class="fas fa-sort-alpha-down"></i>&nbsp;NOME</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree"><i class="fas fa-sort-numeric-down"></i>&nbsp;CPF</a></th>
                                            <th scope="col" colspan="2"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int i = 0;

                                            foreach (Clientes.Models.Cliente c in @ViewBag.clientes)
                                            {
                                                <tr>
                                                    <td scope="row">@(i + 1)</td>
                                                    <td>@c.Id</td>
                                                    <td>@c.Nome</td>
                                                    <td>@c.Cpf</td>
                                                    <td><a href="@Url.Action("Editar", new { c.Id, c.Nome, c.Cpf })" class="btn btn-warning">Editar</a></td>
                                                    <td><a href="@Url.Action("Delete", new { id = c.Id })" class="btn btn-danger">Excluir</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">

                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion2">
                        <div class="card-body">

                            <div class="table-responsive">
                                <h4>Lista ordenada por NOME</h4><br />
                                <table class="table table-striped table-hover" id="tblClientes">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-sort-amount-down-alt"></i>&nbsp;ID</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo"><i class="fas fa-sort-alpha-down"></i>&nbsp;NOME</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree"><i class="fas fa-sort-numeric-down"></i>&nbsp;CPF</a></th>
                                            <th scope="col" colspan="2"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int y = 0;

                                            foreach (Clientes.Models.Cliente c in @ViewBag.clientesN)
                                            {
                                                <tr>
                                                    <td scope="row">@(y + 1)</td>
                                                    <td>@c.Id</td>
                                                    <td>@c.Nome</td>
                                                    <td>@c.Cpf</td>
                                                    <td><a href="@Url.Action("Editar", new { c.Id, c.Nome, c.Cpf })" class="btn btn-warning">Editar</a></td>
                                                    <td><a href="@Url.Action("Delete", new { id = c.Id })" class="btn btn-danger">Excluir</a></td>
                                                </tr>
                                                y++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="card">

                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion2">
                        <div class="card-body">
                            <div class="table-responsive">
                                <h4>Lista ordenada por CPF</h4><br />
                                <table class="table table-striped table-hover" id="tblClientes">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-sort-amount-down-alt"></i>&nbsp;ID</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo"><i class="fas fa-sort-alpha-down"></i>&nbsp;NOME</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree"><i class="fas fa-sort-numeric-down"></i>&nbsp;CPF</a></th>
                                            <th scope="col" colspan="2"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int x = 0;

                                            foreach (Clientes.Models.Cliente c in @ViewBag.clientesC)
                                            {
                                                <tr>
                                                    <td scope="row">@(x + 1)</td>
                                                    <td>@c.Id</td>
                                                    <td>@c.Nome</td>
                                                    <td>@c.Cpf</td>
                                                    <td><a href="@Url.Action("Editar", new { c.Id, c.Nome, c.Cpf })" class="btn btn-warning">Editar</a></td>
                                                    <td><a href="@Url.Action("Delete", new { id = c.Id })" class="btn btn-danger">Excluir</a></td>
                                                </tr>
                                                x++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

