@model Clientes.Models.Cliente

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <section id="cadastro">
        <div class="container">
            <div class="row text-center">
                <h3 class="title">Cadastro de clientes</h3>
            </div>

            <div class="card bg-light mb-3" style="max-width: 90rem;">
                <div class="card-header text-justify">
                    <h4>Cadastro</h4>
                </div>
                <div class="card-body">
                    <form class="form-row" action="/Cliente/Adicionar">
                        <div class="input-group col-md-8 mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">Nome</span>
                            </div>
                            <input type="text" name="nome" id="nome" maxlength="200" class="form-control" placeholder="insira o nome" aria-describedby="inputGroup-sizing-default" aria-describedby="basic-addon1" required="required" /><br />
                        </div>
                        <div class="input-group col-md-4 mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">CPF</span>
                            </div>
                            <input type="text" name="cpf" id="cpf" class="form-control" placeholder="insira o CPF" aria-describedby="inputGroup-sizing-default" aria-describedby="basic-addon1" data-mask="000.000.000-00" pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}" maxlength="14" required="required" /><br />
                        </div>
                </div>
                <div class="card-footer text-center">
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                </div>
                </form>

            </div>
            <div class="card-header" id="headingOne">
                <h5 class="mb-0 text-center">
                    <button class="btn btn-dark btn-lg btn-block" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        EXIBIR TODOS OS CLIENTES
                    </button>
                </h5>
            </div>

            <div id="accordion">
                <div class="card">

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="table-responsive">
                                <h4>Lista ordenada por ID</h4><br />
                                <table class="table table-striped table-hover" id="tblClientes">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-sort-amount-down-alt"></i>&nbsp;ID</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo"><i class="fas fa-sort-alpha-down"></i>&nbsp;NOME</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree"><i class="fas fa-sort-numeric-down"></i>&nbsp;CPF</a></th>
                                            <th scope="col" colspan="2"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int i = 0;

                                            foreach (Clientes.Models.Cliente c in @ViewBag.clientes)
                                            {
                                                <tr>
                                                    <td scope="row">@(i + 1)</td>
                                                    <td>@c.Id</td>
                                                    <td>@c.Nome</td>
                                                    <td>@c.Cpf</td>
                                                    <td><a href="@Url.Action("Editar", new { c.Id, c.Nome, c.Cpf })" class="btn btn-warning">Editar</a></td>
                                                    @*<td><a href="@Url.Action("Delete", new { id = c.Id })" class="btn btn-danger">Excluir</a></td>*@
                                                    <td><a href="/Cliente/Delete/@c.Id" class="btn btn-danger">Excluir</a></td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">

                    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                        <div class="card-body">

                            <div class="table-responsive">
                                <h4>Lista ordenada por NOME</h4><br />
                                <table class="table table-striped table-hover" id="tblClientes">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-sort-amount-down-alt"></i>&nbsp;ID</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo"><i class="fas fa-sort-alpha-down"></i>&nbsp;NOME</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree"><i class="fas fa-sort-numeric-down"></i>&nbsp;CPF</a></th>
                                            <th scope="col" colspan="2"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int y = 0;

                                            foreach (Clientes.Models.Cliente c in @ViewBag.clientesN)
                                            {
                                                <tr>
                                                    <td scope="row">@(y + 1)</td>
                                                    <td>@c.Id</td>
                                                    <td>@c.Nome</td>
                                                    <td>@c.Cpf</td>
                                                    <td><a href="@Url.Action("Editar", new { c.Id, c.Nome, c.Cpf })" class="btn btn-warning">Editar</a></td>
                                                    <td><a href="@Url.Action("Delete", new { id = c.Id })" class="btn btn-danger">Excluir</a></td>
                                                </tr>
                                                y++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="card">

                    <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion">
                        <div class="card-body">
                            <div class="table-responsive">
                                <h4>Lista ordenada por CPF</h4><br />
                                <table class="table table-striped table-hover" id="tblClientes">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><i class="fas fa-sort-amount-down-alt"></i>&nbsp;ID</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo"><i class="fas fa-sort-alpha-down"></i>&nbsp;NOME</a></th>
                                            <th scope="col"><a class="text-white" data-toggle="collapse" href="#collapseThree" aria-expanded="true" aria-controls="collapseThree"><i class="fas fa-sort-numeric-down"></i>&nbsp;CPF</a></th>
                                            <th scope="col" colspan="2"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @{
                                            int x = 0;

                                            foreach (Clientes.Models.Cliente c in @ViewBag.clientesC)
                                            {
                                                <tr>
                                                    <td scope="row">@(x + 1)</td>
                                                    <td>@c.Id</td>
                                                    <td>@c.Nome</td>
                                                    <td>@c.Cpf</td>
                                                    <td><a href="@Url.Action("Editar", new { c.Id, c.Nome, c.Cpf })" class="btn btn-warning">Editar</a></td>
                                                    <td><a href="@Url.Action("Delete", new { id = c.Id })" class="btn btn-danger">Excluir</a></td>
                                                </tr>
                                                x++;
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


